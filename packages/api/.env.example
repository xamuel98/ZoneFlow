# Server Configuration
PORT=3000
NODE_ENV=development

# Database
# Absolute path recommended; defaults to packages/api/data/zoneflow.db if unset
# DATABASE_PATH=/absolute/path/to/zoneflow.db

# JWT Configuration
JWT_SECRET=changeme_dev_secret
BCRYPT_SALT_ROUNDS=10

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Invites
INVITE_URL_BASE=http://localhost:5173/accept-invite

# Email (Resend)
# Get an API key at https://resend.com
RESEND_API_KEY=
EMAIL_FROM=no-reply@zoneflow.local

# Redis Configuration (Upstash)
# Get Redis URL and token from https://upstash.com
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Alternative: Local Redis (if not using Upstash)
# REDIS_URL=redis://localhost:6379

# WebSocket Configuration
WEBSOCKET_PORT=3001

# Background Jobs
BULL_REDIS_URL=redis://localhost:6379
BULL_BOARD_USERNAME=admin
BULL_BOARD_PASSWORD=changeme

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_METRICS=true

# API Documentation
API_DOCS_ENABLED=true